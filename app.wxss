/**
 *  通用样式
 */
page {
  position: relative;
  min-height: 100%;
  background: #f2f2f2;
}
/*** 输入项占位符 ***/
.placeholder {
  color: #929292!important;
}

.user-alert {
  position: fixed;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0,0,0,0.5);
  z-index: 999;
}
.alert-content{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 68%;
  color: #666;
  font-size: 30rpx;
  padding: 60rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx; 
}
.getUser-btn{
  width: 50%;
  height: 75rpx;
  line-height: 75rpx;
  font-size: 32rpx;
  margin-top: 50rpx;
  color: #fff;
  background-color: #FF8234;
}