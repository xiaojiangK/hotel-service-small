/* components/index-service/index-service.wxss */
.hotel-services {
  position: relative;
  width: 100%;
  height: auto;
  background: white;
  border-top-left-radius: 18rpx;
  border-top-right-radius: 18rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  margin-top: -18rpx;
}
.services-title {
  width: 30%;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  margin: 30rpx auto 40rpx auto;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.services-title-img {
  width: 29rpx;
  height: 30rpx;
}
.services-nav {
  width: 100%;
  height: auto;
  overflow: hidden;
}
.services-item {
  width: 25%;
  float: left;
  overflow: hidden;
  margin: 0 auto 60rpx;
}
.hotel-services.line .services-nav {
  display: flex;
  overflow-x: auto;
  align-items: center;
}
.hotel-services .col-3 .services-item{
  width: 33.33%;
}
.hotel-services .col-5 .services-item{
  width: 20%;
}
.line .col-3 .services-item{
  min-width: 250rpx;
}
.line .col-5 .services-item{
  min-width: 150rpx;
}
.hotel-services .img-box{
  text-align: center;
}
.services-img {
  width: 84rpx;
  height: 84rpx;
  margin: 0 0 10rpx;
}
.services-text {
  height: 24rpx;
  line-height: 24rpx;
  color: #666666;
  font-size: 24rpx;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}


/**wifi模块**/
.wifi-box {
  width: 670rpx;
  height: 98rpx;
  background: #F0F9FE;
  border-radius: 8rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  margin: 0 auto 40rpx auto;
}
.wifi-lf {
  width: 48rpx;
  height: 36rpx;
  margin-left: 38rpx;
}
.wifi-nav {
  width: 342rpx;
  height: auto;
  margin-left: 28rpx;
}
.wifi-btn {
  width: 156rpx;
  height: 48rpx;
  background:rgba(74,144,227,1);
  border-radius: 24rpx;
  color: white;
  font-size: 24rpx;
  line-height: 48rpx;
}
.wifi-btn::after {
  border: none;
}
.wifi-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #494A4A;
}
.btnToDetail {
  font-size: 22rpx;
  color: #4A90E3;
}