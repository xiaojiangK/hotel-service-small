/* components/index-service/index-service.wxss */
.hotel-services {
  position: relative;
  width: 100%;
  height: auto;
  background: white;
  border-top-left-radius: 18rpx;
  border-top-right-radius: 18rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  margin-top: -18rpx;
}
.services-title {
  width: 30%;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  margin: 30rpx auto 40rpx auto;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.services-title-img {
  width: 29rpx;
  height: 30rpx;
}
.services-nav {
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 60rpx;
}
.services-item {
  position: relative;
  overflow: hidden;
  width: 13.33%;
  height: 0;
  padding-bottom: 16.43%;
}
.services-img {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 38rpx;
  width: 84rpx;
  height: 84rpx;
  margin: 0 auto;
}
.services-text {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 24rpx;
  line-height: 24rpx;
  color: #666666;
  font-size: 24rpx;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}