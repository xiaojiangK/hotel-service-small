/* components/index-supermarket/index-supermarket.wxss */
.hotel-superMarket {
  width: 100%;
  padding: 0 0 40rpx;
  background: white;
  margin-bottom: 20rpx;
}
.superMarket-title {
  width: 90.67%;
  height: 114rpx;
  margin: 0 auto;
  line-height: 114rpx;
}
.superMarket-img {
  float: left;
  width: 45rpx;
  height: 45rpx;
  margin-top: 36rpx;
  vertical-align: middle;
}
.superMarket-text {
  float: left;
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  margin-left: 16rpx;
}
.superMarket-meg {
  float: left;
  font-size: 26rpx;
  color: #a7a7a7;
  margin-left: 22rpx;
}
.superMarket-arrow {
  float: right;
  margin-top: 50rpx;
  width: 10rpx;
  height: 18rpx;
}
.superMarket-main {
  width: 100%;
  height: 226rpx;
}
.superMarket-lf {
  float: left;
  width: 236rpx;
  height: 222rpx;
  position: relative;
  background: #EFEFEF;
}
.superMarket-lf .reco{
  left: 0;
  top: 0;
  color: #fff;
  z-index: 9;
  position: absolute;
  font-size: 26rpx;
  background-size: 100% 100% !important;
}
.superMarket-lf .circle{
  border-radius: 50%;
  background: #ffb805;
}
.superMarket-lf .square{
  background: #19dbab;
}
.superMarket-lf .bgColor{
  width: 75rpx;
  height: 75rpx;
  color: #fff;
  line-height: 75rpx;
  text-align: center;
}
.superMarket-lf .rectangle{
  width: 90rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: #04a6f8;
}
.superMarket-lf .echelon{
  width: 120rpx;
  height: 120rpx;
  line-height: 43rpx;
  text-align: left;
  background: url('https://pbwci.qun.hk/Fn3T2X-QOEAfNWXVnYe8xwMbWYC-') left top no-repeat;
}
.superMarket-lf .triangle{
  width: 110rpx;
  height: 110rpx;
  line-height: 38rpx;
  text-align: left;
  background: url('https://pbwci.qun.hk/FtXYugoS4OEdbemdGW5xCeQvmYrD') left top no-repeat;
}
.superMarket-lf .echelon .t, .superMarket-lf .triangle .t{
  display: block;
  -webkit-transform: rotate(-45deg);
  transform: rotate(-45deg);
}
.superMarket-lf .img{
  width: 100%;
  height: 344rpx;
}
.superMarket-lf .custom{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.superMarket-lf image {
  width: 100%;
  height: 100%;
}
.superMarket-rg {
  float: left;
  width: 514rpx;
  height: 100%;
  border-bottom: 1rpx solid #E1E1E1;
}
.superMarket-main:last-child .superMarket-rg{
  border: none;
}
.main-title {
  width: 376rpx;
  height: 76rpx;
  line-height: 39rpx;
  font-size: 30rpx;
  color: #333333;
  margin: 42rpx 0 30rpx 24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.main-bt {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.main-bt-sign {
  font-size: 24rpx;
  margin-left: 24rpx;
}
.main-bt-nub {
  font-size: 42rpx;
  font-weight: bold;
}
.main-shopping {
  width: 30rpx;
  height: 30rpx;
  margin-right: 24rpx;
}