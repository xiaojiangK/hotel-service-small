<block wx:if="{{room_booking ==1 && roomList.length>0 }}">
  <!-- banner start -->
  <view class="banner">
    <swiper interval="2000" duration="500" circular="true">
      <block wx:for="{{swiper}}" wx:key="index">
        <swiper-item>
          <image src="{{item}}" mode="aspectFill"/>
        </swiper-item>
      </block>
    </swiper>
    <view class="number">
      <image class="icon-camera" src="/assets/image/icon-camera.png" mode="aspectFill"></image>
      {{swiper.length}}张
    </view>
  </view>
  <!-- banner end -->
  <!-- tab nav start -->
  <view class="tab-nav">
    <text class="{{tabIndex === 0 ? 'active' : ''}}" data-index="{{0}}" bindtap="chooseTab">客房预订</text>
    <text class="{{tabIndex === 1 ? 'active' : ''}}" data-index="{{1}}" bindtap="chooseTab">详情设施</text>
    <text class="{{tabIndex === 2 ? 'active' : ''}}" data-index="{{2}}" bindtap="chooseTab">住客评价</text>
  </view>
  <!-- tab nav end -->
  <!-- tab content start -->
  <view class="tab-panel" hidden="{{tabIndex !== 0}}">
    <!-- duration start -->
    <view class="duration">
      <view class="col" bind:tap="selectDate">
        <text class="date">{{start[1]}}月{{start[2]}}日</text>
        <text class="day">{{startWeek}}入住</text>
      </view>
      <text class="line">—</text>
      <view class="col" bind:tap="selectDate">
        <text class="date">{{end[1]}}月{{end[2]}}日</text>
        <text class="day">{{endWeek}}离店</text>
      </view>
      <view class="col sum">
        共{{days}}晚
        <image class="icon-right" src="/assets/image/icon-right-orange.png" mode="aspectFill" />
      </view>
    </view>
    <!-- duration end -->
    <!-- room list start -->
    <view class="room-list">
      <view class="item" wx:for="{{roomList}}" wx:key="index" wx:if="{{item.state == '1'}}">
        <view catchtap="toggleDetail" data-id="{{item.id}}">
          <view class="img">
            <image src="{{item.logo}}" mode="aspectFill"></image>
            <text class="tag">详情</text>
          </view>
          <view class="type">{{item.name}}</view>
          <view class="desc">
            <text class="{{item.breakfast == '0' ? '' : 'active'}}">{{item.breakfast == '0' ? '不含早' : '含早'}}</text>
            <text>{{item.size}}</text>
            <text>{{item.windows == '1' ? '有窗' : '无窗'}}</text>
          </view>
          <view class="price" wx:if="{{item.price}}">{{item.price}}</view>
        </view>
        <block wx:if="{{ isMchid }}">
          <view class="status" data-room="{{item}}" bindtap="goPay" wx:if="{{item.price > 0}}">
            <view>预订</view>
            <view>
              <block wx:if="{{item.price == 0}}">已售完</block>
              <block wx:if="{{item.price > 10}}">在线付</block>
              <block wx:else>仅剩{{item.price}}间</block>
            </view>
          </view>
          <view class="status full" wx:else>
            <view>满房</view>
            <view>满房</view>
          </view>
        </block>
      </view>
    </view>
    <!-- room list end -->
    <!-- room detail start -->
    <view class="room-detail" hidden="{{!isShowRoomDetail}}">
      <view class="wrap">
          <view class="head">
          {{roomDetail.name}}
          <image class="icon-close" src="/assets/image/icon-close.png" mode="aspectFill" bindtap="toggleDetail" />
        </view>
        <view class="scroll">
          <view class="swiper">
            <swiper interval="2000" duration="500" circular="true" bindchange="roomSwiperChange">
                <block wx:for="{{roomDetail.img}}" wx:key="index">
                  <swiper-item>
                    <image src="{{item}}" mode="aspectFill"/>
                  </swiper-item>
                </block>
            </swiper>
            <text class="number" wx:if="{{roomDetail.img.length}}">{{roomSwiperIndex+1}}/{{roomDetail.img.length}}</text>
          </view>
          <view class="attr">
            <block wx:for="{{roomDetail.facilities}}" wx:key="index">
              <block wx:if="{{item.id == 101054}}">
                <view class="item">
                  <text class="label">卫浴</text>
                  {{item.value}}
                </view>
              </block>
            </block>
            <view class="item">
              <text class="label">窗户</text>
              {{roomDetail.windows == '1' ? '有' : '无'}}
            </view>
            <view class="item">
              <text class="label">可住</text>
              {{roomDetail.people}}人
            </view>
            <view class="item" wx:if="{{roomDetail.acreage}}">
              <text class="label">面积</text>
              {{roomDetail.acreage}}㎡
            </view>
            <view class="item" wx:if="{{roomDetail.floorNum}}">
              <text class="label">楼层</text>
              {{roomDetail.floorNum}}层
            </view>
            <view class="item" wx:if="{{roomDetail.bedtype}}">
              <text class="label">床型</text>
              {{roomDetail.bedtype}} {{roomDetail.size}}米 {{roomDetail.bed}}张
            </view>
            <view class="item">
              <text class="label">早餐</text>
              {{roomDetail.breakfast == '1' ? '有' : '无'}}早餐
            </view>
          </view>
          <view class="policy">
            <view class="label">酒店政策</view>
            <view class="content">
              <view class="text" wx:if="{{roomDetail.policy}}">
                <rich-text nodes="{{roomDetail.policy}}"></rich-text>
              </view>
            </view>
          </view>
        </view>
        <view class="btn">
          <text>￥{{roomDetail.price}}</text>
          <text>预订</text>
        </view>
      </view>
    </view>
    <!-- room detail end -->
  </view>
  <view class="tab-panel detail" hidden="{{tabIndex !== 1}}">
    <!-- level start -->
    <view class="sect level">
      <view class="head">{{hotel.name}}</view>
      <view class="star">{{hotel.star}}</view>
    </view>
    <!-- level end -->
    <!-- service start -->
    <view class="sect service">
      <view class="head">可提供的服务</view>
      <view class="list">
        <view class="item" wx:for="{{hotel.service}}" wx:key="index">
          <image class="icon" wx:if="{{item == 'WiFi'}}" src="/assets/image/icon-wifi.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '早餐'}}" src="/assets/image/service-icon2.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '健身房'}}" src="/assets/image/service-icon3.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '会议室'}}" src="/assets/image/service-icon4.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '餐厅'}}" src="/assets/image/service-icon5.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '停车场'}}" src="/assets/image/service-icon6.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '信用卡收费'}}" src="/assets/image/service-icon7.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '叫醒服务'}}" src="/assets/image/service-icon8.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '洗衣服务'}}" src="/assets/image/service-icon9.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '送餐服务'}}" src="/assets/image/service-icon10.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '24小时前台接待'}}" src="/assets/image/service-icon11.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '自行车租赁'}}" src="/assets/image/service-icon12.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '旅游服务'}}" src="/assets/image/service-icon13.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '擦鞋服务'}}" src="/assets/image/service-icon14.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '行李服务'}}" src="/assets/image/service-icon15.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '外币服务'}}" src="/assets/image/service-icon16.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '专职行李员'}}" src="/assets/image/service-icon17.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '医疗支援'}}" src="/assets/image/service-icon18.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '接送机服务'}}" src="/assets/image/service-icon19.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '多语言服务'}}" src="/assets/image/service-icon20.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '雨伞租赁服务'}}" src="/assets/image/service-icon21.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '租车服务'}}" src="/assets/image/service-icon22.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '叫车服务'}}" src="/assets/image/service-icon23.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '代订机票'}}" src="/assets/image/service-icon24.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '代订火车票'}}" src="/assets/image/service-icon25.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '看护小孩服务'}}" src="/assets/image/service-icon26.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '宠物携带'}}" src="/assets/image/service-icon27.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '泊车服务'}}" src="/assets/image/service-icon28.png" mode="aspectFill"></image>
          <image class="icon" wx:if="{{item == '可加折叠床'}}" src="/assets/image/service-icon29.png" mode="aspectFill"></image>
          <text>{{item}}</text>
        </view>
      </view>
    </view>
    <!-- service end -->
    <!-- intro start -->
    <view class="sect intro">
      <view class="head">酒店介绍</view>
      <view class="attr">
        <view class="item" wx:if="{{hotel.decorationDate}}">装修时间：{{hotel.decorationDate}}年</view>
        <view class="item" wx:if="{{hotel.openDate}}">开业时间：{{hotel.openDate}}年</view>
        <view class="item" wx:if="{{hotel.floorNum}}">楼层高度：{{hotel.floorNum}}层</view>
        <view class="item" wx:if="{{hotel.roomNum}}">房间总数：{{hotel.roomNum}}间</view>
      </view>
      <view class="desc">{{hotel.introduction}}</view>
    </view>
    <!-- intro end -->
    <!-- policy start -->
    <view class="sect policy">
      <view class="head">酒店政策</view>
      <view class="content">
        <view class="text" wx:if="{{hotel.policy}}">
          <rich-text nodes="{{hotel.policy}}"></rich-text>
        </view>
      </view>
    </view>
    <!-- policy end -->
  </view>
  <view class="tab-panel comment-list" hidden="{{tabIndex !== 2}}">
    <view class="tag-list" wx:if="{{commentList.length}}">
      <text class="tag {{commentTagIndex === 0 ? 'active' : ''}}" data-index="{{0}}" bindtap="chooseCommentTag">全部（{{assessCount.total}}）</text>
      <text class="tag {{commentTagIndex === 1 ? 'active' : ''}}" data-index="{{1}}" bindtap="chooseCommentTag">有图（{{assessCount.num}}）</text>
    </view>
    <view class="comment-wrap" wx:if="{{commentList.length}}">
      <commentItem wx:for="{{commentList}}" wx:key="index" comment="{{item}}"></commentItem>
    </view>
    <view class="null" wx:if="{{!commentList.length}}">
      <image class="icon" src="/assets/image/noInfo.png" mode="aspectFill" ></image>
      <view class="desc">暂无评价</view>
    </view>
  </view>
  <!-- tab content end -->
</block>
<block wx:if="{{ room_booking==2 || roomList.length==0 }}">
  <view class="build">
    <image class="icon-build" src="/assets/image/noInfo.png" mode="aspectFill" />
    <view class="desc">酒店暂未开放此功能</view>
  </view>
</block>
 <!-- 授权窗口 -->
<cover-view class='user-alert' wx:if="{{isGetPhoneNumber}}">
  <cover-view class='alert-content2'>
    <cover-view>请绑定手机</cover-view>
    <cover-view>便于给您提供更优质服务</cover-view>
    <button class='getUser-btn getIphone-btn' bindgetphonenumber='getUserPhoneNumber' open-type="getPhoneNumber">立即绑定</button>
  </cover-view>
</cover-view>