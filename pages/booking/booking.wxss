page {
  background: #fff;
}
/*** banner图 ***/
.banner {
  position: relative;
  height: 350rpx;
  background: #bdbdbd;
}
.banner swiper{
  height: 350rpx;
}
.banner image {
  width: 100%;
  height: 100%;
}
.banner .number {
  position: absolute;
  left: 20rpx;
  bottom: 22rpx;
  border-radius: 22rpx;
  width: 120rpx;
  height: 44rpx;
  color: #fff;
  font-size: 22rpx;
  font-weight: 400;
  line-height: 44rpx;
  text-align: center;
  background:rgba(70, 70, 70, .4);
}
.banner .number .icon-camera {
  vertical-align: top;
  margin: 9rpx 5rpx 0 0;
  width: 26rpx;
  height: 26rpx;
}
/*** 标签切换 ***/
.tab-nav {
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #e0e0e0;
  height: 90rpx;
}
.tab-nav text {
  display: inline-block;
  border-bottom: 8rpx solid transparent;
  padding: 28rpx 0 22rpx;
  height: 32rpx;
  color: #333;
  font-size: 32rpx;
  line-height: 1;
  transition: all .25s;
}
.tab-nav text.active {
  border-color: #ff6342;
  color: #ff6342;
}
/*** 入驻时间 ***/
.duration {
  margin: 36rpx 24rpx 0;
  line-height: 1;
}
.duration .col {
  display: inline-block;
  vertical-align: middle;
}
.duration .date {
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
}
.duration .day {
  color: #999;
  font-size: 24rpx;
  font-weight: 400;
}
.duration .sum {
  float: right;
  color: #ff6342;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 34rpx;
}
.duration .line {
  margin: 0 15rpx;
  color: #e0e0e0;
}
.duration .icon-right {
  display: inline-block;
  vertical-align: middle;
  width: 12rpx;
  height: 20rpx;
}
/*** 房间列表 ***/
.room-list {
  margin-top: 36rpx;
  padding: 0 26rpx 16rpx;
}
.room-list .item {
  position: relative;
  margin-bottom: 36rpx;
  height: 154rpx;
}
.room-list .img {
  float: left;
  position: relative;
  margin-right: 20rpx;
  border-radius: 8rpx;
  width: 160rpx;
  height: 154rpx;
  background: #e0e0e0;
  overflow: hidden;
}
.room-list .img image {
  width: 100%;
  height: 100%;
}
.room-list .img .tag {
  position: absolute;
  left: 0;
  bottom: 0;
  border-top-right-radius: 8rpx;
  width: 76rpx;
  height: 36rpx;
  color: #fff;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 36rpx;
  text-align: center;
  background: rgba(0, 0, 0 , .46);
}
.room-list .type {
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
  line-height: 30rpx;
}
.room-list .desc text {
  display: inline-block;
  margin-top: 14rpx;
  border-right: 1rpx solid #e0e0e0;
  padding: 0 6rpx;
  color: #666;
  font-size: 24rpx;
  line-height: 24rpx;
}
.room-list .desc text.active {
  color: #ff6342;
}
.room-list .desc text:first-of-type {
  padding-left: 0;
}
.room-list .desc text:last-of-type {
  border-right: none;
}
.room-list .price {
  margin-top: 26rpx;
  color: #ff6634;
  font-size: 40rpx;
  font-weight: 500;
  line-height: 1;
}
.room-list .price::before {
  content: '￥';
  font-size: 24rpx;
}
.room-list .status {
  position: absolute;
  top: 28rpx;
  right: 0;
  border: 2rpx solid #ff6634;
  border-radius: 12rpx;
  width: 116rpx;
  height: 92rpx;
  text-align: center;
  overflow: hidden;
}
.room-list .status.full {
  border-color: #c6c6c6;
}
.room-list .status view:first-of-type {
  height: 56rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 56rpx;
  background: #ff6634;
}
.room-list .status.full view:first-of-type {
  background: #c6c6c6;
}
.room-list .status view:last-of-type {
  color: #ff6634;
  font-size: 22rpx;
  line-height: 36rpx;
  background: #fff;
}
.room-list .status.full view:last-of-type {
  color: #c6c6c6;
}
.room-list .tel{
  padding: 0 0 30rpx;
  text-align: center;
}
.room-list .tel image{
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}
.room-list .tel text{
  font-size: 24rpx;
  color: #595959;
  margin: 0 0 0 12rpx;
}
/*** 房间详情 ***/
.room-detail {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 100%;
  background: rgba(93, 93, 93, .78);
}
.room-detail .wrap {
  box-sizing: border-box;
  position: absolute;
  left: 0;
  bottom: 0;
  background: #fff;
}
.room-detail .head {
  position: relative;
  height: 92rpx;
  color: #333;
  font-size: 30rpx;
  font-weight: 400;
  line-height: 92rpx;
  text-align: center;
}
.room-detail .right-close{
  position: absolute;
  top:0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 92rpx;
  height: 92rpx;
}
.room-detail .icon-close {
  width: 26rpx;
  height: 26rpx;
}
.room-detail .scroll {
  max-height: 780rpx;
  overflow: auto;
}
.room-detail .swiper {
  position: relative;
  height: 286rpx;
  background: #bdbdbd;
}
.room-detail .swiper swiper{
  height: 286rpx;
}
.room-detail .swiper image {
  width: 100%;
  height: 100%;
}
.room-detail .swiper .number {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  border-radius: 2rpx;
  width: 56rpx;
  height: 36rpx;
  color: #fff;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 36rpx;
  text-align: center;
  background:rgba(19, 19, 19, .6);
}
.room-detail .attr {
  border-bottom: 2rpx solid #e0e0e0;
  margin: 0 28rpx;
  padding: 16rpx 0 30rpx;
}
.room-detail .attr .item {
  display: inline-block;
  padding: 14rpx 0;
  width: 50%;
  color: #333;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 26rpx;
}
.room-detail .attr .label {
  margin-right: 28rpx;
  color: #999;
}
.room-detail .policy {
  padding: 0 28rpx 6rpx;
}
.room-detail .policy .label {
  padding: 28rpx 0;
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
  line-height: 30rpx;
}
.room-detail .policy .text {
  margin-bottom: 16rpx;
  color: #666;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 36rpx;
  text-indent: 50rpx;
}
.room-detail .btn {
  display: flex;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  background: #fff;
}
.room-detail .btn text:first-of-type {
  flex: 1;
  color: #ff6342;
  font-size: 40rpx;
  font-weight: 500;
  background: rgb(250, 250, 250);
}
.room-detail .btn text:last-of-type {
  flex: 1;
  color: #fff;
  font-size: 34rpx;
  font-weight: 400;
  background: #ff6342;
}
.room-detail .btn text.full {
  background: #dedede;
}
.room-detail .btn text.no{
  background: #ccc;
}
/*** 详情设施 ***/
.detail .sect {
  margin: 0 28rpx;
  padding-top: 32rpx;
  border-bottom: 2rpx solid #e0e0e0;
}
.detail .sect:last-of-type {
  border-bottom: none;
}
.detail .head {
  color: #333;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 28rpx; 
}
.detail .level {
  padding-bottom: 34rpx;
}
.detail .level .star {
  margin-top: 22rpx;
  color: #999;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 24rpx;
}
.detail .service .list {
  margin: 42rpx 0 14rpx;
}
.detail .service .list::after {
  content: '';
  display: block;
  clear: both;
}
.detail .service .item {
  float: left;
  margin-bottom: 28rpx;
  width: 20%;
  text-align: center;
}
.detail .service .icon {
  display: block;
  margin: 0 auto 18rpx;
  width: 40rpx;
  height: 40rpx;
}
.detail .service text {
  display: block;
  color: #999;
  height: 40rpx;
  font-size: 20rpx;
  font-weight: 400;
  line-height: 20rpx;
}
.detail .intro .attr {
  margin-top: 26rpx;
}
.detail .intro .item {
  display: inline-block;
  vertical-align: top;
  margin-bottom: 20rpx;
  width: 50%;
  color: #333;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 26rpx;
}
.detail .intro .desc {
  margin-bottom: 38rpx;
  color: #666;
  font-size: 24rpx;
  line-height: 36rpx;
  text-indent: 2em;
}
.detail .policy {
  padding-bottom: 62rpx;
}
.detail .policy .head {
  margin-bottom: 28rpx;
}
.detail .policy .text {
  margin-bottom: 16rpx;
  color: #666;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 36rpx;
  text-indent: 50rpx;
}
/*** 评论列表 ***/
.comment-list .tag-list {
  padding: 28rpx 22rpx 10rpx;
}
.comment-list .tag-list .tag {
  display: inline-block;
  margin-right: 26rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 32rpx;
  padding: 0 28rpx;
  min-width: 160rpx;
  height: 56rpx;
  color: #b5b5b5;
  font-size: 26rpx;
  line-height: 56rpx;
  text-align: center;
  transition: all .25s;
}
.comment-list .tag-list .tag.active {
  border-color: #ff6342;
  color: #ff6342;
  background: #fff5f3;
}
.comment-list .null {
  padding: 138rpx 0 190rpx;
  color: #999;
  font-size: 36rpx;
  font-weight: 400;
  line-height: 36rpx;
  text-align: center;
}
.comment-list .null .icon {
  margin-bottom: 66rpx;
  width: 260rpx;
  height: 228rpx;
}
/*** 建设中 ***/
.build {
  padding-top: 323rpx;
  text-align: center;
}
.build .icon-build {
  width: 260rpx;
  height: 260rpx;
}
.build .desc {
  margin-top: 60rpx;
  color: #919191;
  font-size: 36rpx;
}

