/* pages/hotelRim/hotelRim.wxss */
page {
  background: white;
}
.wrapper {
  padding-top: 22rpx;
  padding-bottom: 40rpx;
}
.hotel-rim {
  width: 100%;
  height: auto;
  background: white;
  margin-bottom: 60rpx;
}
.rim-banner {
  width: 90.67%;
  height: 342rpx;
  background: #EFEFEF;
  margin: 0 auto;
  border-radius:12rpx;
  text-align: center;
  position: relative;
  overflow: hidden;
}
.rim-banner image {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin:auto;
  display: block;
  width: 100%;
  height: 100%;
}
.rim-bt {
  width: 90.67%;
  height: auto;
  margin: 0 auto;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.rim-lf {
  width: 90%;
  height: auto;
  overflow: hidden;
}
.rim-lf-text {
  display: inline-block;
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  margin: 14rpx auto 0 auto;
}
.rim-lf-meg {
  display: inline-block;
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-size: 26rpx;
  color: #929292;
}
.rim-rg {
  width: 10%;
  height: auto;
  overflow: hidden;
  margin-top: 30rpx;
}
.rim-rg-img {
  width: 60rpx;
  height: 60rpx;
}
.noCon{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40%;
}
.noCon image{
  width: 260rpx;
  height: 230rpx;
  margin: 0 0 40rpx;
}
.noCon text{
  display: block;
  color: #A3A3A3;
  font-size: 36rpx;
  line-height: 50rpx;
}