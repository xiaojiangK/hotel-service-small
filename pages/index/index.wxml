<view class="wrapper">
  <custom-swiper data="{{detail}}"> </custom-swiper>
  <index-service></index-service>
  <index-location data="{{detail}}"></index-location>
  <index-facility data="{{volume}}"></index-facility>
  <index-supermarket data="{{goods}}"></index-supermarket>
  <index-rim data="{{periphery}}"></index-rim> 
  <view class="foot">
    精彩旅行，从酒店生活开始…
  </view>
  
  <!-- 授权窗口 -->
  <cover-view class="user-alert" scroll-top="0" wx:if="{{ isGetUserInfo }}">
    <cover-view class='alert-content'>
      <cover-image class="alert-banner" src="/assets/image/index-supermarket.png" ></cover-image>    
      <cover-view class="alert-text"></cover-view>  
      <cover-view class="alert-title">欢迎入住{{hotelName}}</cover-view>
      <cover-view class="alert-msg">尽享酒店服务</cover-view>
      <button class='getUser-btn' bindgetuserinfo='getUserInfo' open-type="getUserInfo">微信授权</button>
    </cover-view>
  </cover-view>

  <!-- 授权手机窗口 -->
  <cover-view class='user-alert' wx:if="{{isGetPhoneNumber}}">
    <cover-view class='alert-content2'>
      <cover-view>请绑定手机</cover-view>
      <cover-view>便于给您提供更优质服务</cover-view>
      <button class='getUser-btn' bindgetphonenumber='getUserPhoneNumber' open-type="getPhoneNumber">立即绑定</button>
    </cover-view>
  </cover-view>
</view>
