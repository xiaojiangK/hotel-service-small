page {
  height: 100%;
  background: #EFEFEF;
}
.foot {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  color: #C6C6C6;
  text-align: center;
  padding-bottom: 20rpx;
}

.sign-vip{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  z-index: 999;
  height: 100%;
  color: #666;
  font-size: 30rpx;
  /* padding: 60rpx 20rpx; */
  background-color: #fff;
}
.getIphone-btn {
  margin-top: 46rpx;
}

.vip-card{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 670rpx;
  height: 372rpx;
  margin: 80rpx auto;
  border-radius: 20rpx;
  /* background:radial-gradient(#ead9ad 0%,#d1ae7a 100%); */
  background-color: #8C4E32;
}
.vip-card-info{
  display: flex;
  margin-top: 40rpx;
  margin-left: 40rpx;
}
.vip-photo{
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  margin-right: 20rpx;
  border:4rpx solid #fff;
  border-radius: 126px;
  overflow: hidden;
}
.vip-photo >image{
  width: 100%;
  height: 100%;
}
.vip-name{
  margin-top: 2rpx;
  font-size:30rpx;
  color:#fff;
}
.vip-num{
  margin-top: 120rpx;
  margin-left: 40rpx;
  color: #fff;
}
.vip-notice{
  margin-top: 2rpx;
  font-size:28rpx;
  color:#fff;
}

.getVip-btn{
  width: 340rpx;
  height: 90rpx;
  font-size: 36rpx;
  line-height: 90rpx;
  margin-top: 240rpx;
  color: #FF6342;
  border-radius:10rpx;
  background-color: #fff;
}
.getVip-btn::after{
  border:4rpx solid #FF6342;
}
button::after{
  border:none;
}
.hotel-agreement{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 560rpx;
  font-size: 32rpx;
  color:#999;
  overflow: auto;
}
.right-arrow{
  width: 12rpx;
  height: 12rpx;
  margin-left: 14rpx;
  margin-top: 2rpx;
  border-right: 2rpx solid #929292;
  border-bottom: 2rpx solid #929292;
  transform: rotate(-45deg);
  overflow: auto;
}