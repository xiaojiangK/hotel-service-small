page {
  background: #EFEFEF;
}
.wrapper {
  width: 100%;
  height: auto;
  position: relative;
  overflow: hidden;
}
.banner-box {
  position: relative;
}
.swiper-box {
  width: 100%;
  height: 380rpx;
}
.swiper-box .slide-image {
  width: 100%;
  height: 380rpx;
}
.welcome {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 168rpx;
  background: linear-gradient(0deg,rgba(0,0,0,1) 0%,rgba(0,0,0,0) 100%);
  opacity: 0.6;
}
.welcome-tp {
  margin-top: 40rpx;
  margin-left: 30rpx;
  color: white;
  font-size: 28rpx;
}
.welcome-bt {
  margin-top: 10rpx;
  margin-left: 30rpx;
  font-size: 36rpx;
  color: white;
}


.hotel-services {
  position: relative;
  width: 100%;
  height: auto;
  background: white;
  border-top-left-radius: 18rpx;
  border-top-right-radius: 18rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  margin-top: -18rpx;
}
.services-title {
  width: 30%;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  margin: 30rpx auto 40rpx auto;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.services-title-img {
  width: 29rpx;
  height: 30rpx;
}
.services-nav {
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 60rpx;
}
.services-item {
  position: relative;
  overflow: hidden;
  width: 13.33%;
  height: 0;
  padding-bottom: 16.43%;
}
.services-img {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 38rpx;
  width: 84rpx;
  height: 84rpx;
  margin: 0 auto;
}
.services-text {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 24rpx;
  line-height: 24rpx;
  color: #666666;
  font-size: 24rpx;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.location {
  width: 100%;
  height: 428rpx;
  background: white;
  margin-bottom: 20rpx;
  overflow: hidden;
}