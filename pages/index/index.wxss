.wrapper {
  height: 100%;
  background: #EFEFEF;
}
.foot {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  color: #C6C6C6;
  text-align: center;
  margin-bottom: 20rpx;
}

.user-alert{
  position: fixed;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0,0,0,0.5);
}
.alert-content{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 60%;
  height: 220rpx;
  padding: 60rpx;
  background-color: #fff;
  border-radius: 10rpx; 
}
.alert-content{
  font-size: 34rpx;
}
.getUser-btn{
  width: 50%;
  margin-top: 20rpx;
  color: #fff;
  background-color: #FF8234;
}