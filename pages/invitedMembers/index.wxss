.wrap{
    width: 100%;
    height: 100%;
    position: relative;
    text-align: center;
    padding: 70rpx 0 0;
    min-height: 1190rpx;
    box-sizing: border-box;
}
.wrap .bg{
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    width: 100%;
    height: 100%;
}
.wrap .topText{
    margin: 0 0 44rpx;
}
.wrap .topText .text-1{
    color: #fff;
    font-size: 40rpx;
    margin: 0 0 30rpx;
    font-weight: bold;
}
.wrap .topText .text-2{
    color: #F9CD00;
    font-size: 65rpx;
    font-weight: bold;
    text-shadow: 0px 6px 4px rgba(191,53,0,0.6);
}
.wrap .qrcode{
    width: 422rpx;
    background: #fff;
    margin: 0 auto 44rpx;
    padding: 50rpx 70rpx;
    border-radius: 20rpx;
}
.wrap .qrcode image{
    width: 100%;
    height: 424rpx;
    margin: 0 0 30rpx;
}
.wrap .qrcode .title{
    color: #000;
    font-size: 28rpx;
    font-weight: bold;
}
.wrap .qrcode .title text{
    color: #EC4A13;
    font-size: 36rpx;
    margin: 0 4rpx;
}
.wrap .tip{
    color: #fff;
    font-size: 24rpx;
}