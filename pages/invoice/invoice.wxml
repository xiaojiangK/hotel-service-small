<view class="tab">
  <text class="label">开票类型</text>
  <text class="tab-nav {{type == 0 ? 'active':''}}" data-type="{{0}}" bindtap="chooseType">单位</text>
  <text class="tab-nav  {{type == 1 ? 'active':''}}" data-type="{{1}}" bindtap="chooseType">个人</text>
</view>
<form class="form" bindsubmit="apply">
  <view class="row">
    <text class="label">抬头名称</text>
    <input type="text" name="title" placeholder="{{type == 0 ? '单位名称':'姓名'}}（必填）" value="{{title}}" bindinput="searchTitle" />
    <text class="select" bindtap="chooseTitle">选择抬头</text>
    <view class="datalist" hidden="{{!datalist}}">
      <view class="item" wx:for="{{datalist}}" wx:key="index" data-title="{{item.title}}" bindtap="chooseCompany">{{item.title}}</view>
    </view>
  </view>
  <view class="row">
    <text class="label">税号</text>
    <input type="text" name="taxNumber" placeholder="15-20位（必填）" maxlength="20" value="{{taxNumber}}" />
  </view>
  <view class="row" hidden="{{type != 0}}">
    <text class="label">单位地址</text>
    <input type="text" name="companyAddress" placeholder="单位地址信息（选填）" value="{{companyAddress}}" />
  </view>
  <view class="row" hidden="{{type != 0}}">
    <text class="label">单位电话</text>
    <input type="text" name="telephone" placeholder="电话号码（选填）" value="{{telephone}}" />
  </view>
  <view class="row" hidden="{{type != 0}}">
    <text class="label">开户银行</text>
    <input type="text" name="bankName" placeholder="开户银行名称（选填）" value="{{bankName}}" />
  </view>
  <view class="row" hidden="{{type != 0}}">
    <text class="label">银行账号</text>
    <input type="text" name="bankAccount" placeholder="银行账号号码（选填）" value="{{bankAccount}}" />
  </view>
  <view class="row">
    <text class="label">房间号</text>
    <input type="text" name="roomNumber" placeholder="房间号（选填）" value="{{roomNumber}}" />
  </view>
  <view class="row">
    <text class="label">留言</text>
    <input type="text" name="comment" placeholder="留言（选填）" value="{{comment}}" />
  </view>
  <button class="apply" form-type="submit">申请开票</button>
</form>