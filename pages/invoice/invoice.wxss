page {
  background: #fff;
}
/*** 建设中 ***/
.build {
  padding-top: 323rpx;
  text-align: center;
}
.build .icon-build {
  width: 260rpx;
  height: 260rpx;
}
.build .desc {
  margin-top: 60rpx;
  color: #919191;
  font-size: 36rpx;
}
/*** 类型切换 ***/
.tab {
  position: relative;
  margin: 0 25rpx;
  padding: 35rpx 0 31rpx;
  border-bottom: 1rpx solid #e1e1e1;
}
.tab .label {
  display: inline-block;
  width: 175rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 60rpx;
}
.tab .tab-nav {
  display: inline-block;
  margin-right: 55rpx;
  border: 2rpx solid #e1e1e1;
  border-radius: 30rpx;
  width: 176rpx;
  height: 56rpx;
  color: #e1e1e1;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 56rpx;
  text-align: center;
} 
.tab .tab-nav.active {
  border-color: #ff8034;
  color: #ff8034;
}
/*** 表单 ***/
.form .hidden {
  display: none;
}
.form .row {
  display: flex;
  align-items: center;
  align-content: flex-start;
  position: relative;
  margin: 0 25rpx;
  border-bottom: 1rpx solid #e1e1e1;
  padding: 23rpx 0;
}
.form .label {
  padding: 6rpx 0 5rpx;
  width: 175rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: 400;
}
.form .title::after,
.form .tax-number::after {
  content: '*';
  color: #f90808;
  font-size: 32rpx;
}
.form input,
.form textarea {
  width: 520rpx;
  height: auto;
  min-height: 32rpx;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 32rpx;
}
.form textarea {
  padding: 10rpx 0 2rpx;
}
.form .row:nth-of-type(2) textarea {
  width: 400rpx;
}
.form .row .choose {
  position: absolute;
  top: 50%;
  right: 0;
  z-index: 999;
  color: #ff8034;
  font-size: 28rpx;
  font-weight: 400;
  transform: translateY(-50%);
}
/*** 抬头列表 ***/
.title-list .item {
  border-top: 1rpx solid #e1e1e1;
  padding: 10rpx 25rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 1.5;
}
/*** 申请按钮 ***/
button::after{ 
  border: none; 
}
.apply {
  margin: 85rpx 40rpx;
  border: none;
  border-radius: 101rpx;
  padding: 0;
  color: #fff;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 101rpx;
  text-align: center;
  background: #ff8034;
}