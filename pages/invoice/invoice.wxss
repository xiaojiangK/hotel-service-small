page {
  background: #fff;
}
.build {
  padding-top: 323rpx;
  text-align: center;
}
.build .icon-build {
  width: 260rpx;
  height: 260rpx;
}
.build .desc {
  margin-top: 60rpx;
  color: #919191;
  font-size: 36rpx;
}
/*类型切换*/
.tab {
  margin: 0 40rpx;
  border-bottom: 1rpx solid #e1e1e1;
  line-height: 126rpx;
}
.tab .tab-nav {
  display: inline-block;
  margin: 0 27rpx;
  border: 2rpx solid #e1e1e1;
  border-radius: 30rpx;
  width: 176rpx;
  height: 56rpx;
  color: #e1e1e1;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 56rpx;
  text-align: center;
} 
.tab .tab-nav.active {
  border-color: #ff8034;
  color: #ff8034;
}
/*表单*/
.form .hidden {
  display: none;
}
.form .row {
  position: relative;
  margin: 0 40rpx;
  border-bottom: 1rpx solid #e1e1e1;
  line-height: 99rpx;
}
.label,
.form input,
.form textarea {
  display: inline-block;
  vertical-align: top;
}
.label {
  width: 156rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: 400;
}
form input,
form textarea {
  display: inline-block;
  width: 514rpx;
  height: auto;
  font-size: 32rpx;
  font-weight: 400;
}
form input {
  padding: 28rpx 0 18rpx;
  line-height: 59rpx;
}
form textarea {
  padding: 32rpx 0 28rpx;
  line-height: 32rpx;
}
.row:nth-of-type(2) .label::after,
.row:nth-of-type(3) .label::after {
  content: '*';
  color: #f90808;
  font-size: 32rpx;
}
.row:nth-of-type(2) textarea {
  width: 400rpx;
}
.choose {
  position: absolute;
  top: 36rpx;
  right: 0;
  z-index: 999;
  color: #FF8034;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 28rpx;
}
.title-list {
}
.title-list .item {
  border-top: 1rpx solid #e1e1e1;
  padding: 10rpx 25rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 1.5;
}
/*申请*/
button::after{ 
  border: none; 
}
.apply {
  margin: 85rpx 40rpx;
  border: none;
  border-radius: 101rpx;
  padding: 0;
  color: #fff;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 101rpx;
  text-align: center;
  background: #ff8034;
}