<!-- 商品订单详情页 -->
<view class='pages'>     
  <view class='title'>
    当前状态：
    <text wx:if="{{orderInfo.status == '1'}}">待支付</text>
    <text wx:if="{{orderInfo.status == '2'}}">待配送</text>
    <text wx:if="{{orderInfo.status == '3'}}">已取消</text>
    <text wx:if="{{orderInfo.status == '4'}}">已完成</text>
  </view>
  <view class='input-item'>
    <view>房间号</view>
    <view>{{orderInfo.room_num}}</view>
  </view>
  <view class='input-item'>
    <view>手机号</view>
    <view>{{orderInfo.tel}}</view>
  </view>
  <view class='cancel-btn' wx:if="{{orderInfo.status == '1'}}">取消订单</view>
  <view class='goods-list-title'>商品信息</view>
  <view class='goods-list'>
    <order-goods isCurrentNum= "1" goods="{{orderInfo.goods}}" info="{{orderInfo.goods_info}}"></order-goods>
  </view>
</view>

