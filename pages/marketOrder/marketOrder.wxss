.title{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #111;
  text-indent: 22rpx;
  background: #fff;
}
.input-item{
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  padding: 0 20rpx;
  border-bottom: 2px solid #f2f2f2;
  font-size: 32rpx;
  line-height: 100rpx;
  background-color: #fff;
  
}

.cancel-btn{
  width: 150rpx;
  margin: 40rpx auto;
  padding: 4px 16rpx;
  border: 2rpx solid #FF6342;
  border-radius:40rpx; 
  font-size: 32rpx;
  text-align: center;
  color: #FF6342;
  
}
.goods-list-title{
  padding: 20rpx;
  font-weight: bold;
}
.goods-list{
  margin-top: 20rpx;
}

.submit-bar{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 110rpx;
  border-top:2rpx solid #e1e1e1;
  background-color: #fff;
}
.submit-btn{
  flex: 0 0 260rpx;
  font-size: 34rpx;
  color: #fff;
  text-align: center;
  line-height: 110rpx;
  background-color: #E93A3D;
}
.red{
  color: #E93A3D;
}
.totle-num{
  margin-top: 8rpx;
  margin-left: 10rpx;
  font-size: 30rpx;
}
.totle-price{
  margin-right: 50rpx;
  font-size: 30rpx;
  color: #999;
}
.totle-price > text{
  font-size: 40rpx;
}
