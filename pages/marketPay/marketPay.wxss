/* pages/marketPay/marketPay.wxss */
.pages{
  background-color: #F2F2F2;
}
.title{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  text-indent: 22rpx;
}
.title >text{
  color: #929292;
}
.input-item{
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  border-bottom: 1px solid #f2f2f2;
}
.input-item >input{
  display: block;
  width: 80%;
  height: 100%;
  margin-left: 22rpx;
  font-size: 32rpx;
}

.goods-list{
  margin-top: 20rpx;
  padding-bottom: 120rpx;
}

.submit-bar{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 110rpx;
  border-top:2rpx solid #e1e1e1;
  background-color: #fff;
}
.submit-btn{
  position: absolute;
  top: 0;
  right: 0;
  width:260rpx;
  height: 110rpx;
  font-size: 34rpx;
  color: #fff;
  text-align: center;
  line-height: 110rpx;
  background-color: #E93A3D;
}
.red{
  color: #E93A3D;
}
.totle-num{
  margin-top: 8rpx;
  margin-left: 10rpx;
  margin-right: 26rpx;
  font-size: 30rpx;
  color: #333;
}
.totle-price{
  margin-right: 100rpx;
  font-size: 30rpx;
  color: #929292;
}
.totle-price > text{
  font-size: 42rpx;
  font-weight: bold;
}
.small-size{
  font-size: 28rpx;
}