/* pages/marketPay/marketPay.wxss */
.pages{
  background-color: #F2F2F2;
}
.title{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  text-indent: 22rpx;
}
.title >text{
  color: #929292;
}
.input-item{
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  border-bottom: 2px solid #f2f2f2;
}
.input-item >input{
  display: block;
  width: 80%;
  height: 100%;
  margin-left: 22rpx;
  font-size: 32rpx;
}

.goods-list{
  margin-top: 20rpx;
  padding-bottom: 120rpx;
}

.submit-bar{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 110rpx;
  border-top:2rpx solid #e1e1e1;
  background-color: #fff;
}
.submit-btn{
  flex: 0 0 260rpx;
  font-size: 34rpx;
  color: #fff;
  text-align: center;
  line-height: 110rpx;
  background-color: #E93A3D;
}
.red{
  color: #E93A3D;
}
.totle-num{
  margin-top: 8rpx;
  margin-left: 10rpx;
  font-size: 30rpx;
}
.totle-price{
  margin-right: 50rpx;
  font-size: 30rpx;
  color: #999;
}
.totle-price > text{
  font-size: 40rpx;
}
