/* pages/payComplete/payComplete.wxss */
page{
  height: 100%;
  background-color: #fff;
  overflow: hidden;
}

.complete{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 28%;
}
.complete-img{
  width: 260rpx;
  height: 230rpx;
}
.complete-status{
  margin: 36rpx 0;
  font-size: 46rpx;
}
.complete-confirm{
  width: 600rpx;
  font-size: 30rpx;
  color: #666;
  text-align: center;
}
.complete-btn{
  width: 290rpx;
  height: 110rpx;
  margin-top: 80rpx;
  border-radius:10rpx; 
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  line-height: 110rpx;
  background-color: #E93A3D;
}

.complete-confirm{
  width: 70%;
  font-size: 30rpx;
  color: #666;
  text-align: center;
}
.complete-foot{
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  
}
.hotel-tel{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100rpx;
  border-top: 2rpx solid #f1f1f1;
  margin-top: 30rpx;
  font-size: 36rpx;
  color: #4288FF;
}
.icon-tel{
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}
.fix-iphonex-button{
  padding-bottom: 46rpx;
}