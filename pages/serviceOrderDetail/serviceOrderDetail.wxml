<!--pages/serviceOrderDetail/serviceOrderDetail.wxml-->
<!-- 早餐券订单详情 -->
<view class="wrapper">  
  <view class="hotel-facility">
    <view class="facility-banner">
      <image src="{{orderInfo.goods[0].img}}" />
    </view>   
  </view>
  <view class="order-item">
    <view class="order-meg">{{orderInfo.goods[0].name}}</view>
     <view class="order-rg">
       <view><label class="order-sign">￥</label> <text class="order-nub">{{orderInfo.goods_info[0].price}}</text></view>
     </view> 
  </view>
  <view class="order-item">
    <view class="order-meg">使用数量</view>
     <view class="order-rg">
       <view><text class="order-nub red-nub">{{orderInfo.goods_info[0].number}}</text></view>
     </view> 
  </view>
  <view class="text-box">
    <view class="sub-faill" wx:if="{{orderInfo.status == '4'}}">该早餐券已于2019-09-21 15:20:22使用</view>  
    <view class="sub-success" wx:else>用餐前，主动出示条形码</view>
  </view>
  <view class="bar-code">
    <image class="" src=""></image>
  </view>
  <view class="bar-code-nub" >4372 8948 9237 0199</view>    
</view>
