<!--pages/serviceOrderDetail/serviceOrderDetail.wxml-->
<view class="wrapper">  
  <view class="hotel-facility">
    <view class="facility-banner">
      <image src="{{orderInfo.goods[0].img}}" mode="aspectFill" />
    </view>   
  </view>
  <view class="order-item">
    <view class="order-meg">{{orderInfo.goods[0].name}}</view>
     <view class="order-rg">
       <view><label class="order-sign">￥</label> <text class="order-nub">{{orderInfo.goods_info[0].price}}</text></view>
     </view> 
  </view>
  <view class="order-item">
    <view class="order-meg">使用数量</view>
     <view class="order-rg">
       <view><text class="order-nub red-nub">{{orderInfo.goods_info[0].number}}</text></view>
     </view> 
  </view>
  <block wx:if="{{source == 'order'}}">
    <view class="text-box">
      <view class="btn-group" wx:if="{{orderInfo.status == '1'}}">
        <view class='order-btn cancel' bind:tap="cancelOrder">取消订单</view>
        <view class='order-btn pay' bind:tap="goPay">去支付</view>
      </view>
      <view class="sub-success" wx:if="{{orderInfo.status == '2'}}">使用前，主动出示条形码</view>
      <view class="sub-faill" wx:if="{{orderInfo.status == '3'}}">该订单已取消</view>
      <view class="sub-faill" wx:if="{{orderInfo.status == '4'}}">该订单已于{{orderInfo.finish_time}}使用</view>
    </view>
    <block wx:if="{{orderInfo.status == '2'}}">
      <view class="bar-code">
        <image class="" src=""></image>
      </view>
      <view class="bar-code-nub" >4372 8948 9237 0199</view>    
    </block>
  </block>
  <block wx:else>
    <view class="text-box use-box">
      <button class='use' bindgetuserinfo='goUse' open-type="getUserInfo">确认核销</button>
      <view class="sub-faill">使用前，主动出示此页面</view>
      <view class="sub-faill">确认使用后此券失效，请勿随意点击</view>
    </view>
  </block>
</view>
