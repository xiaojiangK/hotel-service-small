.wrapper {
  padding-top: 22rpx; 
}
.hotel-facility {
  width: 100%;
  height: auto;
  background: white;
  margin: 0 auto 10rpx auto;
  overflow: hidden;
}
.facility-banner {
  width: 90.67%;
  height: 342rpx;
  background: #EFEFEF;
  margin: 0 auto;
  border-radius:12rpx;
  text-align: center;
  position: relative;
}
.facility-banner image {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin:auto;
  display: block;
  max-width: 100%;
  max-height: 100%;
}
.order-item {
  width: 90.67%;
  height: 130rpx;
  line-height: 130rpx;
  color: #666666;
  border-bottom: 1px solid #E1E1E1;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.order-meg {
  font-size: 36rpx;
  color: #666666;
}
.order-sign {
  font-size: 24rpx;
  color: #666666;
}
.order-nub {
  font-size: 36rpx;
  color: #666666;
}
.text-box {
  width: 90.67%;
  height: auto;
  margin: 80rpx auto;
  text-align: center;
  font-size: 28rpx;
}
.sub-success {
  color: #FF6342; 
}
.sub-faill {
  color: #929292; 
}
.bar-code {
  width: 500rpx;
  height: 136rpx;
  background: yellow;
  margin: 0 auto;
}
.bar-code image {
  width: 100%;
  height: 100%;
}
.bar-code-nub {
  width: 100%;
  text-align: center;
  margin: 46rpx auto 0 auto;
  color: #000000;
  font-weight: bold;
  font-size: 36rpx;
}