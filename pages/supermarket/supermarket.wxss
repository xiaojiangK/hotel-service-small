/* pages/supermarket/supermarket.wxss */
.good-list{
  padding: 0 0 110rpx;
}
.submit-bar{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 110rpx;
  border-top:2rpx solid #e1e1e1;
  background-color: #fff;
}
.submit-btn{
  position: absolute;
  top: 0;
  right: 0;
  width:260rpx;
  height: 110rpx;
  font-size: 34rpx;
  color: #fff;
  text-align: center;
  line-height: 110rpx;
  background-color: #E93A3D;
}
.red{
  color: #E93A3D;
}
.totle-num{
  margin-top: 8rpx;
  margin-left: 10rpx;
  margin-right: 26rpx;
  font-size: 30rpx;
  color: #333;
}
.totle-price{
  margin-right: 100rpx;
  font-size: 30rpx;
  color: #929292;
}
.totle-price > text{
  font-size: 42rpx;
  font-weight: bold;
}
.small-size{
  font-size: 28rpx;
}
.noCon{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40%;
}
.noCon image{
  width: 260rpx;
  height: 230rpx;
  margin: 0 0 40rpx;
}
.noCon text{
  display: block;
  color: #A3A3A3;
  font-size: 36rpx;
  line-height: 50rpx;
}