/* pages/supermarket/supermarket.wxss */
.submit-bar{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 110rpx;
  border-top:2rpx solid #e1e1e1;
  background-color: #fff;
}
.submit-btn{
  flex: 0 0 260rpx;
  font-size: 34rpx;
  color: #fff;
  text-align: center;
  line-height: 110rpx;
  background-color: #E93A3D;
}
.red{
  color: #E93A3D;
}
.totle-num{
  margin-top: 6rpx;
  margin-left: 10rpx;
  font-size: 30rpx;
}
.totle-price{
  margin-right: 50rpx;
  font-size: 30rpx;
}
.totle-price > text{
  font-size: 40rpx;
}
.noCon{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40%;
}
.noCon image{
  width: 260rpx;
  height: 230rpx;
  margin: 0 0 40rpx;
}
.noCon text{
  display: block;
  color: #A3A3A3;
  font-size: 36rpx;
  line-height: 50rpx;
}