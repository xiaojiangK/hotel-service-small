.vip-photo{
  width: 126rpx;
  height: 126rpx;
  background: #fff;
  margin-left: 40rpx;
  margin-right: 30rpx;
  border:4rpx solid #fff;
  border-radius: 126px;
  overflow: hidden;
}
.vip-photo >image{
  width: 100%;
  height: 100%;
}
.vip-name{
  font-size:36rpx;
  color:#fff;
}
.vip-notice{
  margin-top: 14rpx;
  font-size:28rpx;
  color:#fff;
}
.vip-order{
  position: absolute;
  top:220rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 92%;
  height:96rpx;
  padding: 0 4%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
  background-color: #fff; 
}
.look-all{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 24rpx;
  color: #929292;
  font-weight: 400;
}
.right-arrow{
  width: 12rpx;
  height: 12rpx;
  margin-left: 10rpx;
  border-right: 2rpx solid #929292;
  border-bottom: 2rpx solid #929292;
  transform: rotate(-45deg);
}

.order{
  border-top:1rpx dashed #e1e1e1;
  margin-top: 76rpx;
  background-color: #fff;
}
.order-header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}
.order-title{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
}
.icon-title{
  width: 32rpx;
  height: 32rpx;
  margin-right: 14rpx;
  border-radius: 50rpx;
}
.order-status{
  font-size: 28rpx;
  color: #666;
}
.order-content{
  display: flex;
  padding: 28rpx;
  overflow: hidden;
  align-items: center;
  font-size: 28rpx;
  overflow-x: auto;
  background-color: #fafafa;
  -webkit-overflow-scrolling: touch;
}
.order-content .sub{
  font-size: 26rpx;
  color: #666;
}
.order-img{
  width: 126rpx;
  height: 126rpx;
  min-width: 126rpx;
  margin-right: 36rpx; 
}
.order-statistics{
  display: flex;
  justify-content: flex-end;
  padding: 20rpx;
  font-size: 30rpx;
  color: #666666;
}
.statistics-right{
  display: flex;
  justify-content: space-around;
}
.statistics-price{
  margin-left: 10rpx;
}
.price-font{
  color: #333;
  font-weight: bold;
}
.order-no{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 240rpx;
  font-size: 28rpx;
  color: #666;
  margin-top: 76rpx;
  background-color: #fff;
  border-top:1rpx dashed #e1e1e1;
}
.hotel-tel{
  display: flex;
  align-items: center;
  height: 100rpx;
  margin-top: 40rpx;
  padding: 0 40rpx;
  font-size: 36rpx;
  background-color: #fff;
}
.icon-tel{
  width: 32rpx;
  height: 32rpx;
  margin-top: 6rpx;
}
.number-tel{
  margin-left: 24rpx;
  font-size: 30rpx;
}