/* pages/vipCenter/vipCenter.wxss */
page{
  background-color: #f1f1f1;
  height: 100%;
  overflow: hidden;
}
.center-header{
  display: flex;
  align-items: center;
  width: 100%;
  height: 240rpx;
  background:linear-gradient(0deg,rgba(255,102,52,1) 0%,rgba(255,130,52,1) 100%);
}
